// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // ----------------------------------------
  // Editor Appearance & Behavior
  // ----------------------------------------
  "theme": "Catppuccin Mocha - No Italics",
  "ui_font_size": 18,
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_weight": 500,
  "buffer_font_size": 17.0,
  "buffer_font_features": {
    "calt": false
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "restore_on_startup": "none",
  "hide_mouse": "on_typing_and_movement",
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "vim_mode": true,
  "base_keymap": "VSCode",

  // ----------------------------------------
  // AI & Code Prediction
  // ----------------------------------------
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "show_edit_predictions": true, // Global setting, can be overridden per language
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "version": "2",
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking"
    },
    "commit_message_model": {
      "provider": "zed.dev",
      "model": "claude-4-sonnet"
    }
  },
  "agent_font_size": 20,
  "agent_font_family": "Monaspace Neon",

  // ----------------------------------------
  // File Management & Search Exclusions
  // ----------------------------------------
  "file_scan_exclusions": [
    ".idea/",
    ".git/",
    ".venv/",
    "node_modules/",
    "**/.pytest_cache",
    "**/__pycache__",
    ".DS_Store",
    "**/*_templ.go",
    "**/*_templ.txt",
    "**/*.sqlite-wal",
    "**/*.sqlite-shm",
    "**/*.sqlite-journal"
  ],
  "file_types": {
    "HTML": ["gohtml", "djangohtml", "django-html"]
  },

  // ----------------------------------------
  // Language Server Protocol (LSP) Settings
  // ----------------------------------------
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "off",
          "typeCheckingMode": "off"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 88
        }
      }
    },
    "Templ": {
      "formatter": {
        "external": {
          "command": "templ",
          "arguments": ["fmt", "-stdin-filepath", "{buffer_path}"]
        }
      },
      "format_on_save": "on",
      "inlay_hints": {
        "enabled": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html",
          "Templ": "html"
        },
        "tailwindCSS": {
          "emmetCompletions": true
        }
      }
    }
  },

  // ----------------------------------------
  // Language Specific Settings
  // ----------------------------------------
  "languages": {
    "JSONC": {
      "show_edit_predictions": false
    },
    "Go": {
      "show_edit_predictions": true
    },
    "Python": {
      "show_edit_predictions": false,
      "language_servers": ["ruff", "pyright"]
    },
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 88
    }
  },

  // ----------------------------------------
  // Terminal
  // ----------------------------------------
  "terminal": {
    "copy_on_select": true,
    "font_size": 18,
    "detect_venv": {
      "on": {
        // Default directories to search for virtual environments, relative
        // to the current working directory. We recommend overriding this
        // in your project's settings, rather than globally.
        "directories": [".venv", "venv"],
        // Can also be `csh`, `fish`, and `nushell`
        "activate_script": "default"
      }
    }
  },

  // ----------------------------------------
  // Git Integration
  // ----------------------------------------
  "git_panel": {
    "prompt_generate_commit": "Write a short and concise commit message, no more than 50 characters."
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },

  // ----------------------------------------
  // Telemetry
  // ----------------------------------------
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
